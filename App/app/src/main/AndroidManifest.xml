<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mrsummaries_app">

    <!-- Required permission to load images / summaries from the web -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: if you ever need file access on older devices you can add storage permissions here.
         Modern apps should use scoped storage and MediaStore APIs instead. -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrSummariesApp">

        <!-- Main (launcher) activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Note editor activity (opened for creating / editing notes) -->
        <activity
            android:name=".activities.NoteEditorActivity"
            android:exported="false"
            android:label="@string/notes" />

        <!-- Add other activities here (SettingsActivity, LoginActivity, etc.) when you create them.
             Use android:exported=\"false\" unless the activity needs to be launched by other apps. -->

    </application>
</manifest>