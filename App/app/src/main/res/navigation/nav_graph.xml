<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mrsummaries_app.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Notes -->
    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.mrsummaries_app.fragments.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" />

    <!-- Course summaries list (you already have CourseSummariesFragment) -->
    <fragment
        android:id="@+id/courseSummariesFragment"
        android:name="com.example.mrsummaries_app.fragments.CourseSummariesFragment"
        android:label="Course Summaries"
        tools:layout="@layout/fragment_course_summaries" />

    <!-- Single summary detail fragment (destination used by CourseSummariesFragment) -->
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.example.mrsummaries_app.fragments.SummaryFragment"
        android:label="Summary"
        tools:layout="@layout/fragment_summary">
        <!-- If you want to pass the Summary object via SafeArgs, define arguments here.
             For now CourseSummariesFragment passes a Serializable in a Bundle under key "summary". -->
    </fragment>

    <!-- Summaries (top-level) -->
    <fragment
        android:id="@+id/summariesFragment"
        android:name="com.example.mrsummaries_app.fragments.SummariesFragment"
        android:label="Summaries"
        tools:layout="@layout/fragment_summaries" />

    <!-- Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mrsummaries_app.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>