<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mrsummaries_app.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/summariesFragment"
        android:name="com.example.mrsummaries_app.ui.summaries.SummariesFragment"
        android:label="Summaries" />

    <fragment
        android:id="@+id/summaryDetailFragment"
        android:name="com.example.mrsummaries_app.ui.summaries.SummaryDetailFragment"
        android:label="Summary Detail" >
        <argument
            android:name="summary_url"
            app:argType="string" />
        <argument
            android:name="summary_title"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.mrsummaries_app.ui.notes.NotesFragment"
        android:label="Notes" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.mrsummaries_app.ui.settings.SettingsFragment"
        android:label="Settings" />
</navigation>