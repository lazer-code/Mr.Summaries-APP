<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme for view-based layouts (MaterialComponents DayNight so attrs like colorBackground exist) -->
    <style name="Theme.MRSummariesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary / accent -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- surface / background tokens used by layouts -->
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- optional: ripple / control -->
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>
</resources>