<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top toolbar / controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close" />

        <ImageButton
            android:id="@+id/btnToolPen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pencil"
            app:srcCompat="@drawable/ic_pen" />

        <ImageButton
            android:id="@+id/btnToolHighlighter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_highlighter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/highlighter" />

        <ImageButton
            android:id="@+id/btnToolEraser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_eraser"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/eraser" />

        <ImageButton
            android:id="@+id/btnToolText"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_text"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/text" />

        <ImageButton
            android:id="@+id/btnToolLasso"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_lasso"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/lasso" />

        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_undo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/undo" />

        <ImageButton
            android:id="@+id/btnRedo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_redo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/redo" />
    </LinearLayout>

    <!-- Config bar -->
    <LinearLayout
        android:id="@+id/configBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:id="@+id/btnSizeMinus"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="-" />

        <Button
            android:id="@+id/btnSizePlus"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="+" />

        <Button
            android:id="@+id/btnCustomColor"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/custom_color" />
    </LinearLayout>

    <!-- Recent colors -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/recentColorsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp" />
    </HorizontalScrollView>

    <!-- Canvas area (custom view) -->
    <com.example.mrsummaries_app.ui.note.NoteCanvasView
        android:id="@+id/noteCanvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>