<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.mrsummaries_app.views.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/toolsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main toolbar -->
        <LinearLayout
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#EFEFEF">

            <ImageButton
                android:id="@+id/penButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_pen"
                android:contentDescription="Pen Tool" />

            <ImageButton
                android:id="@+id/highlighterButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_highlighter"
                android:contentDescription="Highlighter Tool" />

            <ImageButton
                android:id="@+id/eraserButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_eraser"
                android:contentDescription="Eraser Tool" />

            <!-- Add other tools here -->

        </LinearLayout>

        <!-- Pen toolbar - initially hidden -->
        <LinearLayout
            android:id="@+id/penToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pen Size" />

            <SeekBar
                android:id="@+id/penSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pen Color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/penColorBlack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#000000"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/penColorBlue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#0000FF"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/penColorRed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FF0000"
                    android:layout_margin="4dp" />

                <!-- Add more color options -->
            </LinearLayout>
        </LinearLayout>

        <!-- Highlighter toolbar - initially hidden -->
        <LinearLayout
            android:id="@+id/highlighterToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlighter Size" />

            <SeekBar
                android:id="@+id/highlighterSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Highlighter Color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/highlighterColorYellow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFF00"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/highlighterColorGreen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00FF00"
                    android:layout_margin="4dp" />

                <View
                    android:id="@+id/highlighterColorPink"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFC0CB"
                    android:layout_margin="4dp" />

                <!-- Add more color options -->
            </LinearLayout>
        </LinearLayout>

        <!-- Eraser toolbar - initially hidden -->
        <LinearLayout
            android:id="@+id/eraserToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eraser Size" />

            <SeekBar
                android:id="@+id/eraserSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="20" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>