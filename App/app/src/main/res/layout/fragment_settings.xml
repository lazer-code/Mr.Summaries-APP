<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="UI mode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Switch android:id="@+id/switch_ui_mode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:layout_marginTop="12dp" android:text="Font size" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/seek_font_size" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:layout_marginTop="12dp" android:text="Contrast mode" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Switch android:id="@+id/switch_contrast" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_contact" android:text="Contact Us" android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:layout_marginTop="12dp" android:text="Version 1.0.0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>