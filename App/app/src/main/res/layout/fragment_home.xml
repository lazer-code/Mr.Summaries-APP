<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Root background follows Material theme background -->
    <FrameLayout
        android:id="@+id/home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        android:padding="16dp">

        <!-- Quick Note: MaterialCardView uses theme surface for its background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quickNoteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">
        </com.google.android.material.card.MaterialCardView>

        <!-- Search row (increased top margin to add more space from Quick Note) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/rounded_bg"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:hint="@string/search_summaries" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_bg"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/search" />
        </LinearLayout>
    </FrameLayout>
</layout>