<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Root id must be a valid resource name (snake_case) and should match the include id used
        in activity_note_editor.xml (include android:id="@+id/tools_bottom_sheet").
        DataBinding will generate binding.toolsBottomSheet for an include with id "tools_bottom_sheet".
    -->
    <LinearLayout
        android:id="@+id/tools_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC" />

        <!-- Pen Options -->
        <LinearLayout
            android:id="@+id/layout_pen_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pen Size"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <SeekBar
                    android:id="@+id/seek_bar_pen_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="20"
                    android:progress="5" />

                <View
                    android:id="@+id/view_pen_size_preview"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circle_shape" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pen Style"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/btn_normal_pen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Normal Pen"
                    android:src="@drawable/ic_pen_normal" />

                <ImageButton
                    android:id="@+id/btn_calligraphic_pen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Calligraphic Pen"
                    android:src="@drawable/ic_pen_calligraphic" />

                <ImageButton
                    android:id="@+id/btn_fountain_pen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Fountain Pen"
                    android:src="@drawable/ic_pen_fountain" />

                <ImageButton
                    android:id="@+id/btn_marker_pen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="Marker Pen"
                    android:src="@drawable/ic_pen_marker" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/btn_color_black"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/black"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/btn_color_red"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_red_dark"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/btn_color_blue"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_blue_dark"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/btn_color_green"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_green_dark"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/btn_color_yellow"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_orange_light"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Highlighter Options -->
        <LinearLayout
            android:id="@+id/layout_highlighter_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlighter Size"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <SeekBar
                    android:id="@+id/seek_bar_highlighter_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="30"
                    android:progress="10" />

                <View
                    android:id="@+id/view_highlighter_size_preview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circle_shape"
                    android:alpha="0.5" />
            </LinearLayout>
        </LinearLayout>

        <!-- Eraser Options -->
        <LinearLayout
            android:id="@+id/layout_eraser_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eraser Size"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <SeekBar
                    android:id="@+id/seek_bar_eraser_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="40"
                    android:progress="20" />

                <View
                    android:id="@+id/view_eraser_size_preview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circle_shape_outline" />
            </LinearLayout>
        </LinearLayout>

        <!-- Text Options -->
        <LinearLayout
            android:id="@+id/layout_text_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter text"
                android:inputType="textMultiLine"
                android:minLines="2" />

            <Button
                android:id="@+id/btn_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Add Text" />
        </LinearLayout>
    </LinearLayout>
</layout>