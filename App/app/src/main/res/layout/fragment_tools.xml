<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tools_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.example.mrsummaries_app.fragments.ToolsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row of tool buttons -->
        <LinearLayout
            android:id="@+id/tools_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btn_pencil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pen"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_pencil" />

            <ImageButton
                android:id="@+id/btn_highlighter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_highlighter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_highlighter" />

            <ImageButton
                android:id="@+id/btn_eraser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_eraser"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_eraser" />

            <ImageButton
                android:id="@+id/btn_text"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_text" />

            <ImageButton
                android:id="@+id/btn_lasso"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lasso"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_lasso" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_clear"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_clear" />

            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_undo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/tool_undo" />
        </LinearLayout>

        <!-- Color picker card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/color_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/label_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colors_label"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/color_black"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@android:color/black"
                        android:contentDescription="@string/color_black" />

                    <View
                        android:id="@+id/color_red"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@android:color/holo_red_dark"
                        android:contentDescription="@string/color_red" />

                    <View
                        android:id="@+id/color_blue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@android:color/holo_blue_dark"
                        android:contentDescription="@string/color_blue" />

                    <View
                        android:id="@+id/color_green"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@android:color/holo_green_dark"
                        android:contentDescription="@string/color_green" />

                    <View
                        android:id="@+id/color_yellow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="@android:color/holo_orange_light"
                        android:contentDescription="@string/color_yellow" />

                    <View
                        android:id="@+id/color_magenta"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#FF00FF"
                        android:contentDescription="@string/color_magenta" />

                    <View
                        android:id="@+id/color_cyan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#00FFFF"
                        android:contentDescription="@string/color_cyan" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Size slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <SeekBar
                android:id="@+id/seek_bar_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="30"
                android:progress="5" />

            <View
                android:id="@+id/view_size_preview"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/circle_shape" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>